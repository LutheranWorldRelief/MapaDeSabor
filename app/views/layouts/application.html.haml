!!!
%html.no-js{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Cocoa Flavor Map
    = csrf_meta_tags
    %link{:crossorigin => "", :href => "https://unpkg.com/leaflet@1.3.4/dist/leaflet.css", :integrity => "sha512-puBpdR0798OZvTTbP4A8Ix/l+A4dHDD0DGqYW6RQ+9jxkRFclaxxQb/SJAWZfWAkuyeQUytO7+7N4QKrDh+drA==", :rel => "stylesheet"}/
    %link{:href => "https://unpkg.com/aos@2.3.1/dist/aos.css", :rel => "stylesheet"}/

    %script{:crossorigin => "", :integrity => "sha512-nMMmRyTVoLYqjP9hrbed9S+FzjZHW5gY1TWCHA5ckwXZBadntCNs8kEqAWdrb9O7rxbCaA4lKTIWjDXZxflOcA==", :src => "https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"}
    %script{:src => "https://unpkg.com/aos@2.3.1/dist/aos.js"}

    = stylesheet_link_tag 'admin/application', media: 'all'

    = javascript_include_tag "leaflet-liveupdate"
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'

    =# javascript_include_tag 'https://www.google.com/jsapi'
    = javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js'
    =# javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBihwPmyzbsIiMePF3j9ak60RZvgAfr3dM&callback=initMap', async: true, defer: true



  %body
    .main-container
      = render partial: "layouts/site/header"
      = yield
      = render partial: "layouts/site/footer"
